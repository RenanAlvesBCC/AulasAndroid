<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DetailEmprestimoActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="99dp">

        <ImageView android:layout_width="115dp" android:layout_height="match_parent" android:id="@+id/imgItem"/>
        <LinearLayout android:layout_width="271dp" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="18sp"
                      android:text="Title" android:textAlignment="center" android:id="@+id/tvNomeItem"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="dataEmprestada" android:id="@+id/tvDataEmp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="dataEntrega" android:id="@+id/tvDataEnt"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Informações Emprestador" android:textAlignment="center" android:textSize="24sp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nome:"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edtNome"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Telefone:"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edtTelefone"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cep"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edtCep"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Localidade:"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edtLocalidade"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bairro:"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edtBairro"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="UF:"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edtUF"/>

</LinearLayout>