<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edtTextLogin"
            android:background="@drawable/text_border" android:layout_alignParentStart="true"
    />

    <EditText
            android:id="@+id/tvSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLogin"
            android:background="@drawable/text_border"
            android:hint="@string/edtTextSenha" android:layout_alignParentStart="true"
            android:layout_marginTop="123dp" android:layout_marginStart="0dp"/>

    <Button
            android:id="@+id/btnLogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="logar"
            android:layout_below="@+id/tvSenha" android:layout_alignParentStart="true"
            android:layout_marginTop="271dp"/>

</RelativeLayout>